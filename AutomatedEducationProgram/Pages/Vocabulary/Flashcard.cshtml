@page
@model AutomatedEducationProgram.Pages.Vocabulary.FlashcardModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
    }

    .container {
        min-height: 100%;
        /* display: flex;
                flex-direction: column; */
        justify-content: flex-start; /* Align content at the top of the container */
    }

    .flashcard-container {
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10vh; /* Adjust the margin-top as needed */
    }

    .flashcard {
        width: 300px; /* Adjust the width as needed */
        height: 200px; /* Adjust the height as needed */
        transform-style: preserve-3d;
        transition: transform 0.5s;
        position: relative;
    }

    .front,
    .back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border: 1px solid #dee2e6;
        box-sizing: border-box;
        font-size: 18px;
    }

    .back {
        transform: rotateY(180deg);
    }

    .flipped {
        transform: rotateY(180deg);
    }

    .button-container {
        text-align: center;
        margin-top: 10px; /* Adjust the margin-top as needed */
    }
</style>



<body>
    <div class="container">
        @if (Model.ProcessedVocabulary != null && Model.ProcessedVocabulary.Count > 0)
        {
            for (int i = 0; i < Model.ProcessedVocabulary.Count; i++)
            {
                <div class="flashcard-container">
                    <div class="flashcard" id="flashCard@(i + 1)">
                        <div class="front">
                            @Model.ProcessedVocabulary[i].Term
                        </div>
                        <div class="back">
                            @Model.ProcessedVocabulary[i].Definition
                        </div>
                    </div>
                </div>

                <div class="button-container">
                    <input onclick="flip(@(i + 1))" type="button" value="Flip Card" class="btn btn-primary">
                </div>
            }
        }
        else
        {
            <div>No vocabularies to display.</div>
        }
    </div>
</body>


@section Scripts
    {
    <script src="~/js/Flashcard.js"></script>
    <script>
        function flip(cardNumber) {
            var flashcard = document.getElementById("flashCard" + cardNumber);
            if (flashcard) {
                flashcard.classList.toggle("flipped");
            }
        }
    </script>
}

