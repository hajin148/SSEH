@page
@model AutomatedEducationProgram.Pages.SearchNote.SearchNoteModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Search for Notes</title>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            padding-top: 50px;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Search for Notes</h1>

        <!-- Search Form -->
        <form method="post">
            <div class="form-group">
                <label for="searchInput">Search:</label>
                <input type="text" id="searchInput" name="SearchString" class="form-control" />
            </div>

            <button type="submit" name="searchOption" value="notes" class="btn btn-primary">Search For Notes</button>
            <a href="#" class="btn btn-secondary ml-2">Search For Users</a>
        </form>

        <!-- Display search results -->
        @if (Model.SearchResults != null && Model.SearchResults.Any())
        {
            <h2>Search Results</h2>
            <table>
                <thead>
                    <tr>
                        <th>User Id</th>
                        <th>Note Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var note in Model.SearchResults)
                    {
                        <tr>
                            <td>@note.UserId</td>
                            <td>@note.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No results found.</p>
        }
    </div>

    <!-- Bootstrap JS and Popper.js scripts (required for Bootstrap components) -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
